<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <TextView 
    	android:id="@+id/floor_title" 
    	android:text="Save floor" 
    	android:textAppearance="?android:attr/textAppearanceLarge" 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"/>
    	
    <TextView 
    	android:id="@+id/floor_number_textView" 
    	android:text="Floor number" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"/>
    
    <EditText 
    	android:id="@+id/floor_number_editText" 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:inputType="number"	>
        <requestFocus></requestFocus>
    </EditText>
    
    <TextView 
    	android:id="@+id/floor_name_textView"    	
    	android:text="Floor name" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"/>
   	
   	<EditText 
   		android:id="@+id/floor_name_editText" 
   		android:layout_height="wrap_content" 
   		android:layout_width="fill_parent"/>
    
    <Button
    	android:id="@+id/save_new_floor_button" 
    	android:text="Save" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" />
    
</LinearLayout>
