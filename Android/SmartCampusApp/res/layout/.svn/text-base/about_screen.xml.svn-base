<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/About_RelativeLayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">
    
    <TextView
          android:text="Folia Indoor Mapping is developed in collaboration between Aalborg University and Folia A/S as part of the SmartCampusAAU project, funded by The European Regional Development Fond."
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textSize="10pt"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/Aau_Folia"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	
    <ImageView
    	android:layout_weight="0.6" 
    	android:id="@+id/about_aau" 
    	android:src="@drawable/aau_logo" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content">
    </ImageView>
    <ImageView 
    	android:layout_weight="0.4" 
    	android:id="@+id/about_folia" 
    	android:src="@drawable/folia_logo" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"></ImageView>
    </LinearLayout>
    <ImageView 
    	android:id="@+id/about_eu" 
    	android:src="@drawable/eu_logo" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content">
    </ImageView>

</LinearLayout>