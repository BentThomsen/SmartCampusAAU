<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

        <TextView
            android:text="Title:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            
        <EditText 
        	android:id="@+id/symbolicLocation_title"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        />  
        
        <TextView
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            
        <EditText 
        	android:id="@+id/symbolicLocation_description"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        />
        
        <TextView
            android:text="Url:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            
        <EditText 
        	android:id="@+id/symbolicLocation_url"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" />
        	
        <CheckBox 
        	android:text="Is entrance" 
        	android:id="@+id/symbolicLocation_entrance_checkBox" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"/>
        
        <TextView
            android:text="Specify appropriate Property:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />	
        	
        <Spinner 
        	android:id="@+id/symbolicLocation_info_type_spinner"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:prompt="@string/info_type_prompt" />        	
                
        <Button
	    	android:id="@+id/symbolicLocation_save"
	    	android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:text="Save Changes" />    
        
</LinearLayout>